@{
    ViewData["Title"] = "Home Page";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    // $(document).ready(function () {

    function getViewComponent(address, fromDb) {
        var target = $("#chatContainer");
        debugger;
        $.get("/Email/GetEmails?email=" + address + "&fromDb=" + fromDb, function (data) {
            target.html(data);
        }).fail(function (jqXHR, textStatus, errorThrown) {
            console.error("Error: " + textStatus + ", " + errorThrown);
            console.error("Response Text: " + jqXHR.responseText);
            alert("An error occurred while fetching emails: " + textStatus + " - " + errorThrown);
        });
    }

    function getmails(fromDb) {
        var address = $('#emailAddress').val();
        if (address) {
            $('#infoText').text('Yükleniyor...');
            $("#loading").show();
            getViewComponent(address, fromDb);
        } else {
            alert('Please enter an email address.');
        }
    }

    function updateDatabase() {
        $("#loadingDb").show();
        debugger;
        $.ajax({
            url: "/Email/TransferEmails",
            type: "POST",
            success: function (data) {
                $("#loadingDb").hide();
                if (data.success) {
                    alert("Success: " + data.message);
                } else {
                    alert("Error: " + data.message);
                }
            },
            error: function (xhr, status, error) {
                $("#loadingDb").hide();
                alert("An error occurred: " + error);
            }

        });
    }
    // });
</script>
<style>
    .form {
        --input-focus: #2d8cf0;
        --font-color: #323232;
        --font-color-sub: #666;
        --bg-color: beige;
        --main-color: black;
        padding: 20px;
        background: lightblue;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
        border-radius: 5px;
        border: 2px solid var(--main-color);
        box-shadow: 4px 4px var(--main-color);
    }

    .title {
        color: var(--font-color);
        font-weight: 900;
        font-size: 20px;
        margin-bottom: 25px;
    }

        .title span {
            color: var(--font-color-sub);
            font-weight: 600;
            font-size: 17px;
        }

    .input {
        width: 100%;
        height: 40px;
        border-radius: 5px;
        border: 2px solid var(--main-color);
        background-color: var(--bg-color);
        box-shadow: 4px 4px var(--main-color);
        font-size: 15px;
        font-weight: 600;
        color: var(--font-color);
        padding: 5px 10px;
        outline: none;
    }

        .input::placeholder {
            color: var(--font-color-sub);
            opacity: 0.8;
        }

        .input:focus {
            border: 2px solid var(--input-focus);
        }

    .login-with {
        display: flex;
        gap: 20px;
    }

    .button-log {
        cursor: pointer;
        border-radius: 100%;
        border: 2px solid var(--main-color);
        background-color: var(--bg-color);
        box-shadow: 4px 4px var(--main-color);
        color: var(--font-color);
        font-size: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .button-log img {
            max-width: 100%;
            max-height: 100%;
            border-radius: 50%;
        }

    .icon {
        width: 24px;
        height: 24px;
        fill: var(--main-color);
    }

    .button-log:active, .button-confirm:active {
        box-shadow: 0px 0px var(--main-color);
        transform: translate(3px, 3px);
    }

    .button-confirm {
        margin: 0 auto 0 auto;
        border-radius: 5px;
        border: 2px solid var(--main-color);
        background-color: var(--bg-color);
        box-shadow: 4px 4px var(--main-color);
        font-size: 17px;
        font-weight: 600;
        color: var(--font-color);
        cursor: pointer;
        max-width: 40%;
        padding: 5%;
    }

    .mail-container {
        border-radius: 5px;
        border: 2px solid var(--main-color);
        background-color: var(--bg-color);
        box-shadow: 4px 4px var(--main-color);
        font-size: 15px;
        font-weight: 600;
        color: var(--font-color);
        padding: 5px 10px;
        outline: none;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-md-3, .col-md-8 {
        flex: 1;
    }

    .col-md-3 {
        max-width: 25%;
    }

    .image-container {
        max-width: 70px !important;
        max-height: 70px !important;
        padding: unset !important;
    }

    .mail-name {
        font-weight: bold;
    }

    .mail-address {
        font-style: italic;
    }
</style>

<div class="text-center">
    <div style="height: 80vh;" class="form row">
        <form class="col-md-4 form">
            <a onclick="updateDatabase()" style="max-width:90% !important" class="button-confirm">Veritabanını Güncelle  <img id="loadingDb" style="height:20px; display:none" src="https://i.gifer.com/ZKZg.gif"></img> </a>
            <div class="title"><span>Görüntülemek İstediğiniz Mail Adresini Giriniz</span> </div>
